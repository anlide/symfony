<!DOCTYPE html>
<html ng-app="symfonyCult">
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Культ SYMFONY{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link href="{{ asset('bundles/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('bundles/bootstrap/css/bootstrap-theme.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('components/jquery/redmond/jquery-ui.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('components/jquery/redmond/theme.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/user.css') }}" rel="stylesheet"/>
    <script src="{{ asset('components/jquery/jquery.js') }}"></script>
    <script src="{{ asset('components/jquery/jquery-ui.js') }}"></script>
    <script src="{{ asset('bundles/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/framework/angular.js') }}"></script>
    <script src="{{ asset('app.js') }}"></script>
</head>
<body>
<div class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills pull-right" ng-controller="TopMenuController as menu">
                <input type="hidden" id="role_menu" value="{{ user.role }}">
                <li role="presentation" ng-class="{ 'active': menu.checkIndex(1) }"><a href="/">Сообщения</a></li>
                <li role="presentation" ng-class="{ 'active': menu.checkIndex(2) }"><a href="/profile">Профиль</a></li>
                <li role="presentation" ng-class="{ 'active': menu.checkIndex(3) }" class="hide-on-init" ng-hide="menu.role == 'user'"><a href="/admin">Админка</a></li>
                <li role="presentation"><a href="/logout">Выход</a></li>
            </ul>
        </nav>
        <h3 class="text-muted">Культ SYMFONY</h3>
    </div>

    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}

    <footer class="footer">
        <p>&copy; Сайт культистов symfony поклонников</p>
    </footer>

</div> <!-- /container -->

</body>
</html>
