{% extends 'templates/user.html.twig' %}

{% block body %}
    <link href="{{ asset('css/post.css') }}" rel="stylesheet"/>
    <script src="{{ asset('ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('post.js') }}"></script>

    <div class="jumbotron">
        <h1>Написать новое сообщение</h1>
        <p class="lead">Восхвалите же SYMFONY!</p>
    </div>

    <form class="container" ng-controller="PostController as post">
        <div class="row">
            <label for="title">
                Заголовок:
            </label>
            <input type="text" id="title">
        </div>
        <div class="row">
            <label for="message">
                Тело сообщения:
            </label>
            <textarea id="message"></textarea>
        </div>
        <div class="row buttons">
            <input class="btn btn-success" type="submit" value="Восхвалить">
        </div>
    </form> <!-- /container -->
{% endblock %}